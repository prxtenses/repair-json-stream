{
    "name": "repair-json-stream",
    "version": "1.0.1",
    "description": "High-performance, zero-dependency utility for repairing incomplete/malformed JSON strings from streaming LLM responses",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "repair-json-stream": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./stream": {
            "import": {
                "types": "./dist/stream.d.ts",
                "default": "./dist/stream.js"
            },
            "require": {
                "types": "./dist/stream.d.cts",
                "default": "./dist/stream.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "json",
        "repair",
        "stream",
        "llm",
        "openai",
        "anthropic",
        "streaming",
        "jsonrepair",
        "fix-json"
    ],
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/prxtenses"
    },
    "author": "sonka",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prxtenses/repair-json-stream.git"
    },
    "bugs": {
        "url": "https://github.com/prxtenses/repair-json-stream/issues"
    },
    "homepage": "https://github.com/prxtenses/repair-json-stream#readme",
    "sideEffects": false,
    "devDependencies": {
        "@types/node": "^22.0.0",
        "fast-check": "^3.0.0",
        "jsonrepair": "^3.13.1",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=18"
    }
}